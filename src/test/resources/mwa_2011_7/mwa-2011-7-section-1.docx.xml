            <w:t>(</w:t>
            <w:t xml:space="preserve">b</w:t>
            <w:t>)</w:t>
         </w:r>
         <w:r>
            <w:tab/>
         </w:r>
         <w:r>
            <w:t xml:space="preserve">the governing body of a maintained school in Wales;</w:t>
         </w:r>
      </w:p>
      <w:p>
         <w:pPr>
            <w:pStyle w:val="P3Heading"/>
         </w:pPr>
         <w:r>
            <w:tab/>
         </w:r>
         <w:r>
            <w:t>(</w:t>
            <w:t xml:space="preserve">c</w:t>
            <w:t>)</w:t>
         </w:r>
         <w:r>
            <w:tab/>
         </w:r>
         <w:r>
            <w:t xml:space="preserve">a further education corporation (as defined by section 17(1) of the Further and Higher Education Act 1992) in Wales;</w:t>
         </w:r>
      </w:p>
      <w:p>
         <w:pPr>
            <w:pStyle w:val="P3Heading"/>
         </w:pPr>
