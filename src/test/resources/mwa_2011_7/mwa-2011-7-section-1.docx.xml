            <w:t>)</w:t>
         </w:r>
         <w:r>
            <w:tab/>
         </w:r>
         <w:r>
            <w:t xml:space="preserve">the governing body of a designated institution (as defined by section 28(4) of that Act) in Wales, which—</w:t>
         </w:r>
      </w:p>
      <w:p>
         <w:pPr>
            <w:pStyle w:val="P4Heading"/>
         </w:pPr>
