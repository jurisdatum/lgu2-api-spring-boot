      <w:p>
         <w:pPr>
            <w:pStyle w:val="SectionText"/>
         </w:pPr>
         <w:r>
            <w:t xml:space="preserve"> For the purposes of this Part, an “ </w:t>
         </w:r>
         <w:r>
            <w:t xml:space="preserve">education body</w:t>
         </w:r>
         <w:r>
            <w:t xml:space="preserve"> ” means— </w:t>
