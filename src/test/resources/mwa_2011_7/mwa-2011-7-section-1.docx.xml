         </w:r>
         <w:r>
            <w:t>(</w:t>
            <w:t xml:space="preserve">a</w:t>
            <w:t>)</w:t>
         </w:r>
         <w:r>
            <w:tab/>
         </w:r>
         <w:r>
            <w:t xml:space="preserve">a local authority in Wales;</w:t>
         </w:r>
      </w:p>
      <w:p>
         <w:pPr>
            <w:pStyle w:val="P3Heading"/>
         </w:pPr>
